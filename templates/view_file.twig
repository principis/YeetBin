{% extends 'view.twig' %}

{% set paste_icon = (content ? 'file-earmark-text' : 'file-earmark-binary') %}
{% set is_text = (content is defined) %}
{% block paste_view %}
    <div>
        {% if is_text %}
            <pre class="mb-0"><code id="paste-content"
                                    data-code-language="autodetect">{{ content|escape }}</code></pre>
        {% else %}
            <p class="text-center m-3">No preview possible</p>
        {% endif %}
    </div>
{% endblock %}