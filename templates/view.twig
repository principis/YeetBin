{% extends 'base.twig' %}

{% block stylesheets %}
    <link rel="stylesheet" href="{{ asset('assets/dist/view.css') }}">
{% endblock %}

{% block scripts %}
    <script src="{{ asset('assets/dist/view.js') }}"></script>
{% endblock %}

{% set title = 'Paste ' ~ paste_title ~' | YeetBin' %}

{% block body %}
    <div class="card shadow-sm mt-4 mb-5">
        <div class="d-flex flex-row align-items-stretch">
            <div class="card-header d-flex flex-grow-1 flex-row align-items-center overflow-hidden px-2">
                <p class="mb-0 text-truncate" data-bs-toggle="tooltip" title="{{ paste_title|escape }}"
                   data-bs-delay='{"show":300,"hide":100}'>
                   <i class="bi bi-code-square ps-2"></i> {{ paste_title|escape }}
                </p>
            </div>
            <div class="card-header d-flex align-items-center py-0 px-1">
                <div class="d-none d-md-flex">
                    <a href="{{ path('raw', {id: page_id }) }}" class="btn btn-link nav-link btn-icon px-1"
                       role="button" data-bs-toggle="tooltip" title="View raw">
                        <i class="bi bi-code-slash"></i>
                    </a>
                    <button class="btn-clipboard btn btn-link nav-link btn-icon px-1"
                            type="button" data-bs-toggle="tooltip" title="Copy to clipboard" data-clipboard-target="#paste-content">
                        <i class="bi bi-clipboard"></i>
                    </button>
                    <a href="{{ path('download', {id: page_id }) }}" class="btn btn-link nav-link btn-icon px-1 pe-2"
                       role="button" data-bs-toggle="tooltip" title="Download">
                        <i class="bi bi-download"></i>
                    </a>
                </div>
                <div class="dropdown">
                    <button class="navbar-toggler d-flex d-md-none px-2 fs-5" type="button" data-bs-toggle="dropdown">
                        <i class="bi bi-three-dots"></i>
                    </button>
                    <ul class="dropdown-menu dropdown-menu-end">
                        <li>
                            <a href="{{ path('raw', {id: page_id }) }}" class="dropdown-item" role="button">View raw</a>
                        </li>
                        <li>
                            <button class="btn-clipboard dropdown-item" type="button" data-clipboard-target="#paste-content">Copy to clipboard</button>
                        </li>
                        <li>
                            <a href="{{ path('download', {id: page_id }) }}" class="dropdown-item" role="button">Download</a>
                        </li>
                    </ul>
                </div>
            </div>
        </div>
        <div>
            <pre class="mb-0"><code id="paste-content" class="{{ language != 'autodetect' ? 'language-'~language : '' }}"
                                    data-code-language="{{ language }}">{{ content|escape }}</code></pre>
        </div>
    </div>
{% endblock %}

